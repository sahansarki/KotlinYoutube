<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_course_lessonThumbnail"
        android:layout_width="140dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_course_lesson_title"
        android:layout_width="0dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Course Lesson Title"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_course_lessonThumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_duration"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView_course_lesson_title"
        app:layout_constraintStart_toStartOf="@+id/textView_course_lesson_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_course_lesson_title" />
</androidx.constraintlayout.widget.ConstraintLayout>